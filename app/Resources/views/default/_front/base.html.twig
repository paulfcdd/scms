{% set page = app.request.get('page') %}
{% set _route_params = app.request.attributes.get('_route_params') %}


{% if page is null %}
    {% set page = 'index' %}
{% endif %}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{% block title %}Фонд русской народной культуры{% endblock %}</title>

    <link rel="stylesheet" href="{{ asset('node_modules/bootstrap/dist/css/bootstrap.min.css') }}" type="text/css">
    <script src="https://use.fontawesome.com/dd34fe19f7.js"></script>
    <link rel="stylesheet" href="{{ asset('css/custom.css') }}" type="text/css">
    <link rel="icon" href="{{ asset('img/favicon.ico') }}" type="image/x-icon">
    <link href="{{ asset('node_modules/photoswipe/dist/photoswipe.css') }}" rel="stylesheet">
    <link href="{{ asset('node_modules/photoswipe/dist/default-skin/default-skin.css') }}" rel="stylesheet">

    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>

    <script src='https://www.google.com/recaptcha/api.js'></script>
</head>
<body>

<div class="wrapper lg-padding">

    <div class="header row">
        {% block header %}

            {% set mainMenu = {
            'front.index' : 'Главная'
            } %}

            <div>
                {% include ':default/front/header:col-lg-nav.html.twig' with {'mainMenu': mainMenu} %}
            </div>

            {#<div>#}
                {#{% include ':default/front/header:col-xs-nav.html.twig' with {'mainMenu': mainMenu} %}#}
            {#</div>#}

        {% endblock %}
    </div>

    <div class="content row">
        {% block content %}
            {% block main_banner_widget %}
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" id="main-banner-index">
                        <div class="item active">
                            <img src="{{ asset('img/carousel/dkj_1.jpg') }}" alt="Los Angeles" style="width:100%;">
                        </div>

                        <div class="item">
                            <img src="{{ asset('img/carousel/dkj_2.jpg') }}" alt="Chicago" style="width:100%;">
                        </div>

                        <div class="item">
                            <img src="{{ asset('img/carousel/dkj_3.jpg') }}" alt="Chicago" style="width:100%;">
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                {#<div class="container-fluid index-page-banner" id="main-banner-index"></div>#}
            {% endblock %}

        {% block under_banner_text_widget %}{% endblock %}

        {% endblock %}
        <div id="scroll-on-top"></div>
        <div class="container space-fix-container"></div>

    </div><!-- .content -->

    <div class="footer xs-padding-0-10px">
        {% block footer %}

        {% endblock %}
    </div>

</div><!-- .wrapper -->


<script src="{{ asset('node_modules/jquery/dist/jquery.min.js') }}"></script>
<script src="{{ asset('node_modules/moment/min/moment.min.js') }}"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script src="{{ asset('node_modules/bootstrap/dist/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('js/jquery.gotop.js') }}"></script>
<script src="{{ asset('js/utils.js') }}"></script>
<script src="{{ asset('node_modules/photoswipe/dist/photoswipe.min.js') }}"></script>
<script src="{{ asset('node_modules/photoswipe/dist/photoswipe-ui-default.min.js') }}"></script>

<script>
    $(document).ready(function(){
        $('[data-tooltip="tooltip"]').tooltip();
    });
</script>
{% block javascripts %}{% endblock %}
</body>
</html>
