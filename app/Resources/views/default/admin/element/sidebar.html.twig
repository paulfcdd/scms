<section id="sidebar">

    {% set mainMenu = [
    {
        label: 'Pages',
        icon: 'fa-file-o',
        path: null,
		tree: [
			{
				label: 'All pagess',
				icon: null,
				path: path('admin.list', {'entity': 'page'}),
				tree: null,
				data_entity: 'page'
			},
			{
				label: 'Add page',
				icon: null,
				path: path('admin.manage', {'entity': 'page'}),
				tree: null,
				data_entity: 'page'
			}
        ],		
        data_entity: 'page'
    },
    {
		label: 'Posts',
        icon: 'fa-thumb-tack',
        path: null,
        tree: [
			{
				label: 'All posts',
				icon: null,
				path: path('admin.list', {'entity': 'post'}),
				tree: null,
				data_entity: 'post'
			},
			{
				label: 'Add post',
				icon: null,
				path: path('admin.manage', {'entity': 'post'}),
				tree: null,
				data_entity: 'post'
			},
			{
				label: 'Categories',
				icon: null,
				path: path('admin.list', {'entity': 'category'}),
				tree: null,
				data_entity: 'category'
			}
        ],
        data_entity: 'post'
    },
    {
		label: 'Widgets',
		icon: 'fa-tachometer',
		path: null,
		tree: [
			{
				label: 'All widgets',
				icon: null,
				path: path('admin.list', {'entity': 'widget'}),
				tree: null,
				data_entity: 'post'
			},
			{
				label: 'Add widget',
				icon: null,
				path: path('admin.manage', {'entity': 'widget'}),
				tree: null,
				data_entity: 'post'
			},
        ],
		data_entity: 'widget'
    }
    ] %}

    <aside class="main-sidebar">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
            <!-- Sidebar user panel -->
            <div class="user-panel">
                <div class="pull-left image">
                    <img src="dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                </div>
                <div class="pull-left info">
                    <p>{{ app.user.username }}</p>
                </div>
            </div>

            <!-- search form -->
            <form action="#" method="get" class="sidebar-form">
                <div class="input-group">
                    <input type="text" name="q" class="form-control" placeholder="Search...">
                    <span class="input-group-btn">
                <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                  <i class="fa fa-search"></i>
                </button>
              </span>
                </div>
            </form>
            <!-- /.search form -->

            <!-- sidebar menu: : style can be found in sidebar.less -->
            <ul class="sidebar-menu" data-widget="tree">
                <li class="header">MAIN NAVIGATION</li>

                {% for menuItem in mainMenu %}

                    {% set treeviewClass = null %}
                    {% set active = null %}

                    {% if menuItem.tree is not null %}
                        {% set treeviewClass = 'treeview' %}
                    {% endif %}


                    {% if menuItem.data_entity is defined %}
                        {% if menuItem.data_entity == entity %}
                            {% set active = 'active' %}
                        {% endif %}
                    {% endif %}

                    <li class="{{ treeviewClass }} {% if active is not null %}{{ active }}{% endif %}">
                        <a href="{{ menuItem.path }}">
                            <i class="fa {% if menuItem.icon is null %}fa-circle-o{% else %}{{ menuItem.icon }}{% endif %}"></i>
                            <span>{{ menuItem.label | trans }}</span>
                           {% if treeviewClass is not null %}
                               <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                           {% endif %}
                        </a>
                       {% if menuItem.tree is not null  %}
                           <ul class="treeview-menu">
                               {% for subItem in menuItem.tree %}
                                   <li>
                                       <a href="{{ subItem.path }}">
                                           <i class="fa {% if subItem.icon is null %}fa-circle-o{% else %}{{ subItem.icon }}{% endif %}"></i> {{ subItem.label }}
                                       </a>
                                   </li>
                               {% endfor %}

                           </ul>
                       {% endif %}
                    </li>


                {% endfor %}

               </ul>
        </section>
        <!-- /.sidebar -->
    </aside>
</section>
