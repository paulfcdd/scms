
{% form_theme form "default/admin/form/fields.html.twig" %}

{% set entity = app.request.get('entity') %}

{{ form_start(form) }}
<div class="row">
<div class="col-xs-12">
<button type="submit" class="btn btn-default">
Save
</button>
</div>
</div>
<div class="row">
    <div class="col-xs-8">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Main info</h3>
            </div>
				<div class="box-body">

                    {{ form_label(form.title) }}
					{{ form_widget(form.title) }}
				

					{{ form_label(form.slug) }}
					{{ form_widget(form.slug) }}

					{{ form_label(form.category) }}
                    {{ form_widget(form.category) }}
                    
                    {{ form_label(form.content) }}
                    {{ form_widget(form.content) }}
				</div>
        </div>
    </div>
    
    <div class="col-xs-4">
		<div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">SEO settings</h3>
            </div>
			<div class="box-body">
				
                    {{ form_label(form.seoKeywords) }}
					{{ form_widget(form.seoKeywords) }}
					
                   <div class="form-group">
						{{ form_label(form.seoDescription) }}
						{{ form_widget(form.seoDescription) }}
                   </div>
			</div>
        </div>
        
    </div>
      <div class="col-xs-4">
		<div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Files uploading</h3>
            </div>
			<div class="box-body">
				<div class="form-group">
					{% if object.files is not empty %}
						<button class="btn btn-primary" style="width: 100%" type="button" data-toggle="modal" data-target="#modal-default">
							<i class="fa fa-file-image-o" aria-hidden="true"></i> Show files ({{ object.files | length }} files related)
						</button>
					{% endif %}
				</div>

				<div class="form-group">
					{{ form_label(form.files) }}
					{{ form_widget(form.files) }}	
				</div>
			</div>
        </div>
    </div>     
</div>
{% if object.files is not empty %}
		<div class="modal fade" id="modal-default">
          <div class="modal-dialog" style="width: 60%;">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Uploaded files</h4>
              </div>
              <div class="modal-body">
                 <div class="row">
					{% for file in object.files %}
						{% set file_path = 'upload/'~entity~'/'~file.name %}
						{% set disabled = null %}

						 {% if file.isDefault == 1 %}
							 {% set disabled = 'disabled' %}
                         {% endif %}

					  <div class="col-md-4">
						<div class="thumbnail" class="min-height: 330px;">
						  <a href="#">
							<img src="{{ asset(file_path) }}" alt="Lights" style="width:100%">
							
							<div class="caption" style="width: 100%">
								<div class="btn-group">
							  <button type="button"
                                      class="btn btn-primary btn-sm set-as-default" data-fileid="{{ file.id }}" {{ disabled }}>
                                            Главное фото
                              </button>
                              <button type="button" class="btn btn-danger btn-sm delete-file" 
										data-fileid="{{ file.id }}">
									Удалить
                              </button>
								</div>                                    
							</div>
						  </a>
						</div>
					  </div>
					{% endfor %}
				</div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-danger pull-left" data-dismiss="modal" style="width: 100%;">Закрыть</button>
              </div>
            </div>
            <!-- /.modal-content -->
          </div>
          <!-- /.modal-dialog -->
        </div>
{% endif %}
{{ form_end(form) }}
