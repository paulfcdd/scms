{% form_theme form "default/admin/form/fields.html.twig" %}

{{ form_start(form) }}
<div class="row">
<div class="col-xs-12">
<button type="submit" class="btn btn-default">
Save
</button>
</div>
</div>
<div class="row">
    <div class="col-xs-8">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Main info</h3>
            </div>
				<div class="box-body">

                    {{ form_label(form.title) }}
					{{ form_widget(form.title) }}
				
                    {{ form_label(form.mainPage) }}
					{{ form_widget(form.mainPage) }}
					
                    {{ form_label(form.inNavbar) }}
					{{ form_widget(form.inNavbar) }}
				
					{{ form_label(form.slug) }}
					{{ form_widget(form.slug) }}

                    {{ form_label(form.content) }}
                    {{ form_widget(form.content) }}
				</div>
        </div>
    </div>
    
    <div class="col-xs-4">
		<div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Page settings</h3>
            </div>
			<div class="box-body">
                {{ form_label(form.parent) }}
				{{ form_widget(form.parent) }}
				
                {{ form_label(form.type) }}
				{{ form_widget(form.type) }}
				
				{% if form.postCategory is defined %}
					{{ form_label(form.postCategory) }}
					{{ form_widget(form.postCategory) }}
				{% endif %}
				
				{% if form.postPerPage is defined %}
					{{ form_label(form.postPerPage) }}
					{{ form_widget(form.postPerPage) }}
				{% endif %}
			</div>
        </div>
    </div>
    
    <div class="col-xs-4">
		<div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">SEO settings</h3>
            </div>
			<div class="box-body">
				
                    {{ form_label(form.seoKeywords) }}
					{{ form_widget(form.seoKeywords) }}
					
                   <div class="form-group">
						{{ form_label(form.seoDescription) }}
						{{ form_widget(form.seoDescription) }}
                   </div>
			</div>
        </div>
    </div>
</div>
{{ form_end(form) }}
